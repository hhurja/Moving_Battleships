<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="Controller.EditProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2" >


            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blocked until: " />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Edit Profile"
                android:textSize="30sp"
                android:onClick="onClick"
                android:clickable="true"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="30dp" />

        </android.support.constraint.ConstraintLayout>

        <ListView
            android:id="@+id/AppListView"
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/deleteProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete this Profile" />

        <Button
            android:id="@+id/startBlocking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Blocking these Applications" />

        <Button
            android:id="@+id/fab_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="submit"
            android:src="@drawable/schedule"
            android:text="Toggle On" />

        <Button
            android:id="@+id/fab_plus"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:onClick="submit"
            android:src="@drawable/plus"
            android:text="Add Application" />



    </LinearLayout>


</RelativeLayout>


